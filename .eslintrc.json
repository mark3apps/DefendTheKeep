{
  "env": {
    "es2021": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.json"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": ["./tsconfig.json"],
    "extraFileExtensions": [".json"]
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "prefer-regex-literals": "off",
    "no-new": "off",
    "no-undef": "off",
    "quotes": [
      "off",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "camelcase": "off",
    "accessor-pairs": "off",
    "default-case": "error",
    "grouped-accessor-pairs": "error",
    "no-lonely-if": "error",
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "indent": ["off"],
    "no-useless-constructor": "off",
    "no-tabs": "off",
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": false,
        "variables": false
      }
    ],
    "no-unused-vars": "off",
    "semi": "off",
    "comma-dangle": "off",
    "space-before-function-paren": "off",
    "curly": "off"
  }
}
